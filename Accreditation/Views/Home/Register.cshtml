@{
    Layout = "_Layout";
}

@using Accreditation.Models
@model Accreditation.Models.AccUser
@{
    ViewData["Title"] = "Registration";
}

<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form class="form-horizontal" asp-action="Register">
               
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" type="text" required/>
                </div>
                <div class="form-group">
                    <label class="control-label">User ID</label>
                    <input asp-for="UserId" class="form-control" type="text" required/>
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="pass" required/>
                </div>
                <div class="form-group">
                    <label class="control-label">Role</label>
                    @Html.DropDownList("RoleId", null, "Select a role", new { @class = "form-control", required = "required" })
                </div>
                <br/>
                <div class="form-group">
                    <input type="submit" value="Register"/>
                </div>
            </form>
            <div class="col-sm-4"></div>
        </div>
    </div>
</div>
@{
    if(TempData["msg"]!=null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }
}
